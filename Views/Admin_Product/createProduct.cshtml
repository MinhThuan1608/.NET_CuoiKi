                                            <input type="number" class="span11"
                                                   name="priceOption" placeholder="Number..." required />
                                        </div>
                                    </div>
                                </div>
                                <img id="blahOp" class="blahOp" src="#" alt="your image">
                                <p id="imgInfoOp" class="imgInfoOp" style="padding-left:15px">You have no image!</p>
                                <br />
                                <input type="file" id="imgInpOp" name="fileImgOption" class="imgInpOp" required><br />
                            </div>
                        </div>


                    </div>
                </div>

                <div class="span6" style="margin-left: 0; width:100%;">
                    <div class="widget-box">
                        <div class="widget-title">
                            <span class="icon">
                                <i class="icon-align-justify"></i>
                            </span>
                            <h5>Description</h5>
                        </div>
                        <div class="widget-content nopadding">
                            <textarea id="editor" name="description">
                            <p></p>
                            <p></p>
                            <p></p>
                            <p></p>
                            <p></p>
                            </textarea>
                        </div>

                        <div class="widget-title">
                            <span class="icon">
                                <i class="icon-align-justify"></i>
                            </span>
                            <h5>Form Elements</h5>
                        </div>
