                                            <option>COMING SOON</option>
                                            <option>OUT OF STOCK</option>
                                        </select>
                                        <hr>
                                        <div class="container">
                                            <!-- Button to Open the Modal -->
                                            <button type="submit" class="btn btn-success" id="submit">
                                                Create
