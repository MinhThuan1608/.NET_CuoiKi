@using ShoesProject.Models
@model sho
@{
    ViewBag.Title = "ChiTietSanPham";
    Layout = "~/Views/Layout/SingleLayout.cshtml";
    var quantity = 1;
}

<div class="container">
    <div class="row s_product_inner">
        <div class="col-lg-6">
            <div>
                <div class="single-prd-item">
                    <img style="margin-top:10%"class="img-fluid" src="@Url.Content("~/" + Model.imageslink)" alt="">
                </div>
            </div>
        </div>
        <div class="col-lg-5 offset-lg-1">
            <div class="s_product_text">
                <h3>@Model.name</h3>
                <h2>@Model.price.ToString("#,## VNĐ")</h2>
                <ul class="list">
                    <li><a class="active" href="#"><span>@ShoesProject.Resources.Data.Availibility</span> : @Model.status</a></li>
                    <li><a href="#"><span>@ShoesProject.Resources.Data.Category</span> : @Model.category</a></li>
                    <li><a href="#"><span>@ShoesProject.Resources.Data.Size</span> : @Model.size</a></li>
                    <li><a href="#"><span>@ShoesProject.Resources.Data.Color</span> : @Model.color</a></li>
                    <li><a href="#"><span>@ShoesProject.Resources.Data.Brand</span> : @Model.brand</a></li>
                    <li><a href="#"><span>@ShoesProject.Resources.Data.Manufactory</span> : @Model.manufactory</a></li>
                    <li><a href="#"><span>@ShoesProject.Resources.Data.CheckQuality</span> : @Model.checkquality</a></li>
                </ul>
                <p>
                    @Model.description
                </p>
                <div class="product_count">
                    @*<label for="qty">Quantity:</label>
                    @Html.TextBox("quantity", "1", new { @id = "setQuantity", @class = "input-text qty", Type = "number", @min = "1"})
        @*<input type="number" id="qtyNum" maxlength="12" value="1" min="1" title="Quantity" class="input-text qty" runat="server">*@
                    @*<button onclick="var result = document.getElementById('sst'); var sst = result.value; if( !isNaN( sst )) result.value++;return false;"
                class="increase items-count" type="button">
            <i class="lnr lnr-chevron-up"></i>
        </button>
        <button onclick="var result = document.getElementById('sst'); var sst = result.value; if( !isNaN( sst ) &amp;&amp; sst > 0 ) result.value--;return false;"
                class="reduced items-count" type="button">
            <i class="lnr lnr-chevron-down"></i>
        </button>*@
                </div>
                <div class="card_area d-flex align-items-center">
                    @if (Model.status == "AVAILABLE")
                    {
                    @Ajax.ActionLink(ShoesProject.Resources.Data.AddToCart, "ThemGioHangAjax", "GioHang", new { @MaSP = Model.id, @quantity = quantity }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "divGioHang", InsertionMode = InsertionMode.Replace }, new { @class = "primary-btn", @onclick = "alert('Add to cart success!')" })
                    <a href="/GioHang/ThemGioHang/@(Model.id)"><button type="button" class="primary-btn">@ShoesProject.Resources.Data.BuyNow</button></a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $("#productMenu").attr('class', 'nav-item active');
</script>

