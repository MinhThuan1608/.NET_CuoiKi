@using ShoesProject.Models
@model List<cart>
@{
    ViewBag.Title = "ThanhToan";
    Layout = "~/Views/Layout/CheckoutLayout.cshtml";
    account acc = ViewBag.acc as account;
    List<address_Book> listAB = ViewBag.listAB as List<address_Book>;
   
}

@if (Model == null || Model.Count <= 0)
{
<h1 style="color:red">@ShoesProject.Resources.Data.EmptyCart</h1>
}
else
{
    <div class="container">

        <div class="billing_details">
            @using (Html.BeginForm("ThanhToan", "GioHang", FormMethod.Post))
            {
                <div class="row">
                    <div class="col-lg-8">
                        <div class="divDatHang">

                            @Html.AntiForgeryToken()
                            @if (Session["acc"] != null)
                            {
                                @*Thiết kế form lưu thông tin khách hàng chưa tài khoản*@

                            <div class="thongtinmuahang">
                                <h2>@ShoesProject.Resources.Data.PurchaseInfo</h2>
                                <div class="form-group">
                                    <label for="usr">@ShoesProject.Resources.Data.FullName</label>
                                    <input type="text" name="fullname" class="form-control" value="@acc.fullname" disabled>
                                </div>
                                <div class="form-group">
                                    <label for="pwd">@ShoesProject.Resources.Data.Email</label>
                                    <input type="text" name="email" class="form-control" value="@acc.email" disabled>
                                </div>
                                <div class="form-group">
                                    <label for="pwd">@ShoesProject.Resources.Data.Phone</label>
                                    <input type="text" name="phone" class="form-control" value="@acc.phone" disabled>
                                </div>
                                <div class="form-group">
                                    <label for="pwd">@ShoesProject.Resources.Data.Address</label>
                                    <input type="text" id="addressText" name="address" class="form-control" value="@acc.address">
                                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" style="float:right">...</button>
                                    <div class="modal" id="myModal">
                                        <div class="modal-dialog modal-lg">
                                            <div class="modal-content">

                                                <!-- Modal Header -->
                                                <div class="modal-header">
                                                    <h4 class="modal-title">@ShoesProject.Resources.Data.ChooseAvailableAddress</h4>
                                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                </div>

                                                <!-- Modal body -->
                                                <div class="modal-body">
                                                    <div class="form-group">
                                                        <select class="span11" id="chooseAddressOption" size="3">
                                                            @foreach (var item in listAB)
                                                            {
                                                                if (item.status == "DEFAULT")
                                                                {
                                                                    <option selected>@item.address</option>
                                                                }
                                                                else
                                                                {
                                                                    <option>@item.address</option>
                                                                }
                                                            }
                                                        </select>
                                                    </div>
                                                </div>

                                                <!-- Modal footer -->
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-danger" data-dismiss="modal">@ShoesProject.Resources.Data.Close</button>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="pwd">@ShoesProject.Resources.Data.Note</label>
                                    <input type="text" name="note" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="payment" style="float:left">@ShoesProject.Resources.Data.Payment</label>
                                    @Html.DropDownList("payment", null, new { @class = "form-control", @id="changePayment" })
                                </div>
                                <br/>
                                <div class="form-group">
                                    <p style="color:red;" id="infoPayment">@ShoesProject.Resources.Data.RedirectToPayPal</p>
                                </div>

                                @* <table>
                                            <tr>
                                                <td align="center" , colspan="2"><b>Thông tin khách hàng</b></td>
                                            </tr>
                                            <tr>
                                                <td>Họ tên</td>
                                                <td>@Html.TextBox("fullname", acc.fullname)</td>
                                                <span style="color:red" id="tbTenKH"></span>
                                            </tr>
                                            <tr>
                                                <td>Địa chỉ</td>
                                                <td>@Html.TextBox("address", acc.address)</td>
                                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">...</button>
                                                <div class="modal" id="myModal">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">

                                                            <!-- Modal Header -->
                                                            <div class="modal-header">
                                                                <h4 class="modal-title">Modal Heading</h4>
                                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                            </div>

                                                            <!-- Modal body -->
                                                            <div class="modal-body">
                                                                Modal body..
                                                            </div>

                                                            <!-- Modal footer -->
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                                            </div>

                                                        </div>
                                                    </div>
                                                </div>
                                                <span style="color:red" id="tbDiaChi"></span>
        </tr>
                                            <tr>
                                                <td>Email</td>
                                                <td>@Html.TextBox("email", acc.email)</td>
                                                <span style="color:red" id="tbEmail"></span>
                                            </tr>
                                            <tr>
                                                <td>Phone</td>
                                                <td>@Html.TextBox("phone", acc.phone)</td>
                                            </tr>
                                            <tr>
                                                <td>Note</td>
                                                <td>@Html.TextBox("note")</td>
                                            </tr>
                                        </table>*@

                            </div>
                            }

                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="order_box" style="margin-top:10%">
                            <h2>@ShoesProject.Resources.Data.YourOrder</h2>
                            <ul class="list">
                                <li><a href="#">@ShoesProject.Resources.Data.Product <span>@ShoesProject.Resources.Data.Total</span></a></li>
                                @foreach (var item in Model)
                                {
                                    <li><a href="#">@item.sho.name<span class="middle">x @item.quantity</span> <span class="last">@item.totalcost.ToString("#,## VNĐ")</span></a></li>
                                }
                            </ul>
                            <ul class="list list_2">
                                <li><a href="#">@ShoesProject.Resources.Data.SubTotal <span>@ViewBag.TongTien.ToString("#,## VNĐ")</span></a></li>
                                <li><a href="#">Shipping <span>@ShoesProject.Resources.Data.Free</span></a></li>
                                <li><a href="#">@ShoesProject.Resources.Data.Total <span>@ViewBag.TongTien.ToString("#,## VNĐ")</span></a></li>
                            </ul>
                           
                            <div class="payment_item" style="display:none">
                                @Html.TextBox("status", (string)ViewBag.DHStatus)
                            </div>


                        </div>
                    </div>
                </div>
                <div style="margin-top:10px">
                    <button type="submit" id="btnDatHang" class="btn btn-warning" style="float:right">@ShoesProject.Resources.Data.OrderNow</button>
                    <a href="/SanPham/SanPham" style="float:right;margin-right:10px">@ShoesProject.Resources.Data.BuyMoreItem</a>
                </div>
            }

        </div>
    </div>


}
<style>
    .payment {
        width: 200px;
    }
</style>
<script>
    $('#infoPayment').hide();
    $(document).ready(function () {
    $('#chooseAddressOption').change(function () {
        var text = $("#chooseAddressOption option:selected").text();
        $('#addressText').val(text);
    });
        $('#changePayment').change(function () {
            var text = $("#changePayment option:selected").text();
            if (text == 'PAYPAL') {
                $('#infoPayment').show();
            } else {
                $('#infoPayment').hide();
            }
        });
    });
</script>
